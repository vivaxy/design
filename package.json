      "git add"
    ]
  },
  "gds": {
    "keywords": [
      "vivaxy",
      "design",
      "github",
      "demo"
    ],
    "readme": "# [Design](https://vivaxy.github.io/design/)",
    "link-prefix": "https://vivaxy.github.io/design/"
  }
